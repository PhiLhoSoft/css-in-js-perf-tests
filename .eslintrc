{
    "ecmaVersion": 2017,
    "extends": "eslint-config-airbnb",
    "env": {
        "node": true,
        "mocha": true,
    },
    "parser": "babel-eslint",
    "rules": {
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "max-len": [
            2,
            160
        ],
        "no-plusplus": 0,
        "array-bracket-spacing": [ 2, "always" ],
		"no-param-reassign": 0,
		"no-console": 0,
        "import/prefer-default-export": 1
    }
}
